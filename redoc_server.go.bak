package main

import (
	"log"
	"net/http"
)

func main() {
	// –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏—Ö —Ñ–∞–π–ª–æ–≤
	fs := http.FileServer(http.Dir("."))
	
	// –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∫–æ—Ä–Ω–µ–≤–æ–≥–æ –ø—É—Ç–∏
	http.HandleFunc("/", func(w http.ResponseWriter, r *http.Request) {
		if r.URL.Path == "/" {
			http.ServeFile(w, r, "redoc_simple.html")
		} else if r.URL.Path == "/docs" {
			http.ServeFile(w, r, "docs.html")
		} else {
			fs.ServeHTTP(w, r)
		}
	})

	log.Println("üöÄ Redoc –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è –∑–∞–ø—É—â–µ–Ω–∞ –Ω–∞ http://localhost:8182")
	log.Println("üìñ –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è API –¥–æ—Å—Ç—É–ø–Ω–∞ –ø–æ –∞–¥—Ä–µ—Å—É: http://localhost:8182")
	
	if err := http.ListenAndServe(":8182", nil); err != nil {
		log.Fatal("–û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞:", err)
	}
} 